generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 Int          @id @default(autoincrement())
  perfil             Perfil
  nombre             String
  apellido           String
  localidad          String
  direccionComercial String?
  cuit               String?
  creadoEn           DateTime     @default(now())
  email              String       @unique
  password           String
  telefono           String
  multimedia         Multimedia[]
}

model Multimedia {
  id       Int       @id @default(autoincrement())
  tipo     TipoMedia
  url      String
  userId   Int
  creadoEn DateTime  @default(now())
  user     User      @relation(fields: [userId], references: [id])
}

enum Perfil {
  userCliente
  userTienda
}

enum TipoMedia {
  FOTO
  VIDEO
}
