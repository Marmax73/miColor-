generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 Int       @id @default(autoincrement())  // identificador único
  perfil             Perfil    // enum: userCliente | userTienda

  nombre             String
  apellido           String
  localidad          String
  numeroDeMobil      String

  // Campos adicionales SOLO para userTienda
  direccionComercial String?   // nullable → solo aplica si perfil = userTienda
  cuit               String?   // nullable → solo aplica si perfil = userTienda

  // Relación con multimedia (solo para userTienda)
  multimedia         Multimedia[]

  creadoEn           DateTime  @default(now())
}

model Multimedia {
  id        Int      @id @default(autoincrement())
  tipo      TipoMedia
  url       String
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  creadoEn  DateTime @default(now())
}

enum Perfil {
  userCliente
  userTienda
}

enum TipoMedia {
  FOTO
  VIDEO
}