generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 Int          @id @default(autoincrement())  // identificador Ãºnico
  perfil             Perfil       // enum: userCliente | userTienda

  nombre             String
  apellido           String
  telefono           String
  localidad          String

  email              String       @unique
  password           String

  // Campos adicionales SOLO para userTienda
  direccionComercial String?      // coincide con "direccion" del form
  cuit               String?      

  multimedia         Multimedia[]

  creadoEn           DateTime     @default(now())
}

model Multimedia {
  id        Int        @id @default(autoincrement())
  tipo      TipoMedia
  url       String
  user      User       @relation(fields: [userId], references: [id])
  userId    Int
  creadoEn  DateTime   @default(now())
}

enum Perfil {
  userCliente
  userTienda
}

enum TipoMedia {
  FOTO
  VIDEO
}